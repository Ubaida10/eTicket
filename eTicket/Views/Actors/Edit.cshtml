@model eTicket.Models.Entity_Classes.Actor

@{
    ViewData["Title"] = "Update Actor";
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewData["Title"] - CineTix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body style="background-color: #f7f7f7;">
    <div class="container mt-5">
        <div class="row justify-content-center mb-5">
            <div class="col-md-8 col-lg-6">
                <div class="bg-white p-5 rounded shadow-sm">
                    <div class="card-header bg-success text-white text-center">
                        <h2>Update Actor</h2>
                    </div>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group text-center mb-4">
                            <img id="ProfilePicturePreview" src="@Model.ProfilePictureUrl" class="border-info rounded-circle" style="max-width: 150px; max-height: 150px;" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter actor's name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProfilePictureUrl" class="form-label">Profile Picture URL</label>
                            <input asp-for="ProfilePictureUrl" class="form-control" placeholder="Enter profile picture URL" />
                            <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Biography" class="form-label">Biography</label>
                            <textarea asp-for="Biography" class="form-control" rows="5" placeholder="Enter actor's biography"></textarea>
                            <span asp-validation-for="Biography" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a class="btn btn-outline-secondary me-2" asp-action="Index">Show All</a>
                            <input type="submit" value="Update" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
