@model IEnumerable<eTicket.Models.Entity_Classes.Movie>

@{
    ViewData["Title"] = "List of Movies";
}


<div class="container px-2">
    <h1 class="my-4 text-center">Movies</h1>
    @if (Model.Any())
    {
        <div class="d-flex flex-row flex-wrap justify-content-around mb-5">
            @foreach (var movies in Model)
            {
                <div class="card me-3 mb-3" style="width: 18rem;">
                    <img src="@movies.ImageUrl" class="card-img-top" alt="@movies.Title" style="height: 27rem; width: 18rem;">
                    <div class="card-body text">
                        <h5 class="card-title">@movies.Title</h5>
                        <p class="card-text justify-content-evenly">@movies.Synopsis.Substring(0, 100)</p>
                        <a href="#" class="btn btn-primary">More</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No movies available.</p>
    }
</div>
